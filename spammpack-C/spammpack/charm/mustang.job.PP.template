#MSUB -N JOBNAME

module purge
module load gcc/4.7.2
module load openmpi/1.6.3

cd $SLURM_SUBMIT_DIR

echo "starting on $(date)"

./charmrun -np ${SLURM_NTASKS} \
  spamm \
  --operation SP2 \
  --tolerance 1e-6 \
  --Ne NE \
  --density DENSITY \
  --block BLOCK \
  --print-PEMap PEMAP \
  --initial-PE 0 \
  --load-balance
